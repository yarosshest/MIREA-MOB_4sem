<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="@string/textViewParts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMain"
        app:layout_constraintVertical_bias="0.367">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:tag="com.example.mirea_mob_4sem.work13.Work131"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Сохранение состояния приложения"/>

            <Button
                android:id="@+id/button2"
                android:tag="com.example.mirea_mob_4sem.work13.Work132"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Создание и получение настроек SharedPreferences"/>

            <Button
                android:id="@+id/button3"
                android:tag="com.example.mirea_mob_4sem.work13.Work133"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="PreferenceFragmentCompat"/>

            <Button
                android:id="@+id/button4"
                android:tag="com.example.mirea_mob_4sem.work13.Work134"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Чтение и сохранение файлов"/>

            <Button
                android:id="@+id/button5"
                android:tag="com.example.mirea_mob_4sem.work13.Work135"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Реализовать размещение файлов во внешнем хранилище"/>

            <Button
                android:id="@+id/button6"
                android:tag="com.example.mirea_mob_4sem.work13.Work136"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Подключение к базе данных SQLite"/>

            <Button
                android:id="@+id/button7"
                android:tag="com.example.mirea_mob_4sem.work13.Work137"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="SQLiteOpenHelper и SimpleCursorAdapter, получение данных из SQLite"/>

            <Button
                android:id="@+id/button8"
                android:tag="com.example.mirea_mob_4sem.work13.Work138"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Добавление, удаление и обновление данных в SQLite"/>

            <Button
                android:id="@+id/button9"
                android:tag="com.example.mirea_mob_4sem.work13.Work139"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Использование существующей БД SQLite"/>

            <Button
                android:id="@+id/button10"
                android:tag="com.example.mirea_mob_4sem.work13.Work1310"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Динамический поиск по базе данных SQLite"/>

            <Button
                android:id="@+id/button11"
                android:tag="com.example.mirea_mob_4sem.work13.Work1311"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="transition"
                android:text="Модель, репозиторий и работа с базой данных"/>


        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>